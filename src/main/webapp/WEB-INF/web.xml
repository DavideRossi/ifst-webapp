<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>IFTS Web Application</display-name>
	<servlet>
		<servlet-name>initial_servlet</servlet-name>
		<servlet-class>it.fav.ifts.web.InitialServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>processing_servlet</servlet-name>
		<servlet-class>it.fav.ifts.web.ProcessingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>initial_servlet</servlet-name>
		<url-pattern>/start</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>initial_servlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>processing_servlet</servlet-name>
		<url-pattern>/salutation</url-pattern>
	</servlet-mapping>
</web-app>
